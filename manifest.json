{
  "name" : "Cookie Monster",
  "version" : "0.1",
  "description" : "Nom Nom Nom",
  "permissions": [ "cookies", "tabs", "http://*/*", "https://*/*", "webRequest", "webRequestBlocking"],
  "icons": { "16": "cookie.png", "48": "cookie.png", "128": "cookie.png" },
  "browser_action": {
    "default_icon": "cookie.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
  {
	"matches": ["<all_urls>"],
	"js":	   ["contentscript.js"]
  }],
  "manifest_version": 2
}
